<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="br.com.fearaujo.marvel.view.activity.ProfileActivity">

    <android.support.v7.widget.Toolbar
        android:background="@color/colorPrimary"
        android:elevation="5dp"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:src="@drawable/profile"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                style="@style/textViewBoldLarge"
                android:gravity="center"
                android:text="Felipe Trova de Araujo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                style="@style/textViewLarge"
                android:gravity="center"
                android:text="23 anos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/textViewLarge"
                android:gravity="center"
                android:text="Desenvolvedor Mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivGithub"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/github"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivLinkedin"
                    android:layout_marginRight="12dp"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/linkedin"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivFacebook"
                    android:layout_marginLeft="12dp"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/facebook"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    


</LinearLayout>
